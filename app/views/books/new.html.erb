<h1>Books</h1>
<table>
  <th>Title </th>
  <th>Body</th>
  <% @books.each do |book| %>
  <tr>
    <td class='book_title'><%= book.title%></td>
    <td class='book_sum'><%= book.body%></td>
    <td class='show'>
      <%= link_to'show', "books/#{book.id}" %>
    </td>
    <td class='edit'>
      <%= link_to'edit',"books/#{book.id}/edit" %>
    </td>
    <td class='destroy'>
      <%= link_to'clear',"books/#{book.id}", :method => :delete,"data-confirm" => "削除しますか？"%>
    </td>
  </tr>
  <% end %>
</table>
<% if @book.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(book.errors.count, "error") %> prohibited this product from being saved: </h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li>< %= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

