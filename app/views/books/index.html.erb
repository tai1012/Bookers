<h1>Books</h1>
<table>
  <th>Title </th>
  <th>Summary </th>
  <% @books.each do |book| %>
  <tr>
    <td class='book_title'><%= book.title%></td>
    <td class='book_sum'><%= book.body%></td>
    <td class='show'>
      <%= link_to'show', book_path(book.id)%>
      <!--< %= link_to'show', "books/#{book.id}" %>-->
    </td>
    <td class='edit'>
      <%= link_to'edit', edit_book_path(book.id) %>
      <!--<　%= link_to'edit',"books/#{book.id}/edit" %>-->
    </td>
    <td class='destroy'>
      <%= link_to'destroy', book_path(book.id), :method => :delete,"data-confirm" => "削除しますか？"%>
      <!--< %= link_to'clear',"books/#{book.id}", :method => :delete,"data-confirm" => "削除しますか？"%>-->
    </td>
  </tr>
  <% end %>
</table>

<h2>New Book</h2>
<%= form_with model:@book,local:true do |f| %>
  <% if @book.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved: </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Summary</h4>
  <%= f.text_area :body %>

  <div class='create'><%= f.submit'Create Book' %></div>
<% end %>

